@model PostosModel
@{
    ViewData["Title"] = "Confirmação de apagar o posto";
}

<div class="text-center">
    <h3>Realmente deseja apagar o posto (@Model.Nome)</h3>
</div>

<div class="text-center">
    <a role="button" class="btn btn-primary" asp-controller="Postos" asp-action="Index">Cancelar</a>
    <a role="button" class="btn btn-danger" asp-controller="Postos" asp-route-id="@Model.Id" asp-action="Apagar">Confirmar</a>
</div>